	.SBTTL	.ASCVG - VG MODIFIED 'ASCII'

;	PROGRAMMER: RICH MOORE

;
;MACRO .ASCVG CONVERTS STRING OF ALPHANUMERICS TO OFFSET VALUES INTO
;VGMSGA TABLE (TABLE OF VG CHARACTER JSRL'S)
;
	.MACRO .ASCVG .STRING
	.NCHR ..N,<.STRING>
	.IRPC ..C,<.STRING>
	.IF EQ,''..C-^H20
	..X=0			;BLANK CHAR=0
	.IFF
	.IF GT,''..C-^H40
	..X=''..C-^H36		;ALPHA'S ^B TO ^25
	.IFF
	..X=''..C-^H2F		;NUMBERS 1 TO ^A
	.ENDC
	.ENDC
	..X=..X*2		;..X=VGMSGA TABLE OFFSET
	..N=..N-1
	.IIF EQ,..N,..X=..X!^H80	;SET LAST CHAR OF MSG FLAG
	.BYTE ..X
	.ENDR
	.ENDM
	.LIST	MEB
	.NLIST	BYT
; 
	.MACRO ASCVH ...AR1,...AR2
	.NARG ...NUM
	.IF EQ ...NUM-1
	.NCHR ...HLO,<...AR1>	;1 ARGUMENT, CENTER STRING
	.BYTE -<...HLO*3>
	.ASCVG <...AR1>
	.IFF
	.BYTE ...AR1		;2 ARGUMENTS: HORIZ LOC.
	.ASCVG <...AR2>		;STRING
	.ENDC
	.ENDM
	.PAGE
	.SBTTL	PREPARE TO MAKE MSG TABLES
	.MACRO MESS ...LIT,...COL,...SCA,...YPO
	.=...ENG
	.WORD E'...LIT
	...ENG=...ENG+2
	.=...FRE
	.WORD F'...LIT
	...FRE=...FRE+2
	.=...GER
	.WORD G'...LIT
	...GER=...GER+2
	.=...SPA
	.WORD S'...LIT
	...SPA=...SPA+2
M'...LIT=.MSNUM
	.GLOBL M'...LIT
	.MSNUM=.MSNUM+2
	.=...CSY
	.BYTE <...COL*10>!...SCA	;COLOR, SCALE
	.BYTE ...YPO
	...CSY=...CSY+2
	.ENDM
NMSGS	=48.			;48 MESSAGES
...ENG	=.			;ENGLISH TABLE TOP
...FRE	=...ENG+<NMSGS*2>	;FRENCH TABLE TOP
...GER	=...FRE+<NMSGS*2>	;GERMAN TABLE TOP
...SPA	=...GER+<NMSGS*2>	;SPANISH TABLE TOP
...CSY	=...SPA+<NMSGS*2>	;COLOR, SCALE, Y TABLE TOP
.MSNUM	=0
MSGLBS	=...CSY
ENGMSG	=...ENG
FREMSG	=...FRE
GERMSG	=...GER
SPAMSG	=...SPA
